{

    "suggest.noselect": false,

    "diagnostic.infoSign": "",
    "diagnostic.warningSign": "⚠",
    "diagnostic.errorSign": "✘",
    "diagnostic.hintSign": "",

    "explorer.file.showHiddenFiles": true,
    "explorer.file.reveal.auto": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "nvim-web-devicons",

    "markdownlint.config": {
        "line-length": false
    },

    "snippets.extends": {
        "cpp": ["c"],
        "javascriptreact": ["javascript"],
        "typescript": ["javascript"]
    },

    "html.filetypes": [
        "html",
        "handlebars",
        "htmldjango",
        "blade",
        "php"
    ],

    "languageserver": {
        "racket": {
            "command": "racket",
            "args": [
                "--lib",
                "racket-langserver"
            ],
            "filetypes": [
                "scheme"
            ]
        },
        "intelephense": {
            "command": "intelephense",
            "args": ["--stdio"],
            "filetypes": ["php"],
            "initializationOptions": {
                /* Insert the correct path */
                /*"storagePath": "/tmp/intelephense"*/
                "storagePath": "/home/b/.npm-global/bin/intelephense"
            }
        }
    },

    "intelephense.licenceKey": "000YOP3TTT7QMST",

    "intelephense.progress.enable": false
}
