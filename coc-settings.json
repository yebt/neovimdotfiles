        "racket": {
            "command": "racket",
            "args": [
                "--lib",
                "racket-langserver"
            ],
            "filetypes": [
                "scheme"
            ]
        }
    },

    "phpls.path": "/usr/bin/intelephense",
    "intelephense.licenceKey": "000YOP3TTT7QMST",
    
    "intelephense.progress.enable": true, 

    "php-cs-fixer.rules": "@PSR12,ordered_imports,no_unused_imports",

    "explorer.file.showHiddenFiles": true,
    "explorer.file.reveal.auto": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "nvim-web-devicons",

    "tabnine.priority": 2,

    "blade.bladeFormatter.toolPath":"/home/eb/.config/coc/extensions/node_modules/coc-blade/node_modules/blade-formatter/bin/blade-formatter"
