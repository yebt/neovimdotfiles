{
    "emmet.includeLanguages": {"vue-html": "html", "javascript": "javascriptreact", "php":"html", "blade":"html"},

    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.11",
            "path": "/path/to/jdk-11"
        },
        {
            "name": "JavaSE-11",
            "path": "/path/to/jdk-11"
        },
        {
            "name": "JavaSE-14",
            "path": "/path/to/jdk-14",
            "default": true
        }
    ],
    "markdownlint.config": {
        "line_length": false
    },

    "diagnostic.errorSign": "x",
    "diagnostic.infoSign": "!",
    "diagnostic.warningSign": "⚠",
    "diagnostic.hintSign": "¿",


    //"suggest.noselect": false,
    "suggest.floatEnable": true,
    "suggest.acceptSuggestionOnCommitCharacter": false,
    "suggest.enablePreview": true,
    "suggest.snippetIndicator": "~",
    "suggest.echodocSupport": true,
    "suggest.floatConfig": {
        "winblend": 2,
        "border": true,
        "focusable": true,
        "shadow": true
    },

    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "nvim-web-devicons",
    "explorer.file.showHiddenFiles": true,
    "explorer.file.column.indent.indentLine": true,
    "explorer.enableFloatinput": true,
    "explorer.focus": true,
    "explorer.quitOnOpen": true,
    // "explorer.file.git.showUntrackedFiles":false,
    "explorer.sources": [
        {
            "name": "bookmark",
            "expand": false
        },
        {
            "name": "buffer",
            "expand": true
        },
        {
            "name": "file",
            "expand": true
        }
    ],
    // "explorer.keyMappings.global":  {

    // },

    "snippets.extends": {
        "php": ["php", "html"],
        "tpl": ["html"]
    },

    "coc.source.emoji.enable": true,
    "coc.source.emoji.filetypes": [
        "markdown",
        "javascript"
    ],
    "coc.source.emoji.shortcut": "T",
    "coc.source.emoji.triggerCharacters": [
        ":"
    ],

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
